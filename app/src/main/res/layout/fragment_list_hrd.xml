<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconoWebHRD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coffee" />

        <TextView
            android:id="@+id/tituloWebHRD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/nombreRVHRD"
            android:gravity="center"
            android:text="Web" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconoTelHRD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coffee" />

        <TextView
            android:id="@+id/tituloTelHRD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/nombreRVHRD"
            android:gravity="center"
            android:text="Teléfono" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconoDirHRD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coffee" />

        <TextView
            android:id="@+id/tituloDirHRD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/nombreRVHRD"
            android:gravity="center"
            android:text="Dirección" />

    </LinearLayout>


    <TextView
        android:id="@+id/tituloDetallesHRD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/nombreRVHRD"
        android:text="Detalles" />

    <TextView
        android:id="@+id/detallesHRD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nombreRVHRD"
        android:layout_marginRight="@dimen/nombreRVHRD"
        android:text="Detalles del hotel tal y tal el cual esta en tal y tal parte y cuesta entre tanto y tanto" />


</LinearLayout>